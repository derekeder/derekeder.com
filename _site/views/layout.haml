!!! 5
%html{:lang => "en"}
  %head
    %title= "#{@title}" || 'Derek Eder - Open Data Web Developer'
    %meta{:charset => "utf-8"}

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "Partner at DataMade, Co-found of Open City, and leader of the Open Gov Hack Night. I make stuff with open data.", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}
            
    / Styles
    = include_stylesheet "bootstrap.spacelab.min"
    = include_stylesheet "bootstrap-responsive"
    = include_stylesheet :custom
    = include_stylesheet "code_highlighting"
