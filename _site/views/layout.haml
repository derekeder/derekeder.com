      = include_javascript "http://html5shim.googlecode.com/svn/trunk/html5.js"

  %body
    .container
      .row
        .span3.content-secondary
          %h2 
            %a{:href => "/"} Derek Eder

          %h4 Open Data Web Developer
          .hidden-phone
            %img.pull-left.img-polaroid.headshot{:src => "/images/derek.jpg", :alt=> "Derek Eder", :title => "Derek Eder"}
            %p
              I work with open data and create open source apps and tools in Chicago. <a href='/about'>Read more &raquo;</a>
            %hr
            .clearfix

            %p
              %strong
                Founder and Partner at 
                %a{:href => "http://datamade.us"} DataMade
              %br
              An open data web development and consulting company in Chicago
            %p
              %strong
                Lead Organizer of
                %a{:href => "http://chihacknight.org"} Chi Hack Night
              %br
              Weekly event for building civic technology with open data
            %p
              %strong
                Co-founder of
                %a{:href => "http://opencityapps.org/"} Open City
              %br
              Group of volunteers that create civic web apps with open data
          
            %p
              %a{:href => "mailto:derek.eder+de@gmail.com"} Email
              or
              %a{:href => "http://twitter.com/derekeder"} tweet
              at me.

            %p.social
              %a{:href => "https://github.com/derekeder"}
                %img{:alt => "Derek Eder on Github", :src => "/images/social/github.png", :title => "Derek Eder on Github"}
              %a{:href => "https://twitter.com/derekeder"}
                %img{:alt => "Derek Eder on Twitter", :src => "/images/social/twitter.png", :title => "Derek Eder on Twitter"}
              %a{:href => "http://www.linkedin.com/in/derekeder"}
                %img{:alt => "Derek Eder on LinkedIn", :src => "/images/social/linkedin.png", :title => "Derek Eder on LinkedIn"}

          .clearfix
        
        .span9
          .well.content-primary
            %ul.nav.nav-pills
              %li{:class => current_menu_class("home")}
                %a{:href => "/"} 
                  Home
              %li{:class => current_menu_class("talks")}
                %a{:href => "/talks"} 
                  Talks
              %li{:class => current_menu_class("maps")}
                %a{:href => "/maps"} 
                  Maps
              %li{:class => current_menu_class("websites")}
                %a{:href => "/websites"} 
                  Projects
              %li{:class => current_menu_class("about")}
                %a{:href => "/about"} 
                  About
            %hr
            = yield
      
    %footer.footer
      .span12
        %p.pull-right
          %a{:href => "https://twitter.com/derekeder"} @derekeder
          |
          %a{:href => "mailto:derek.eder+de@gmail.com"} Email me
